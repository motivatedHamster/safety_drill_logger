<%= form_for(@classroom, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @classroom.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@classroom.errors.count, "error") %> prohibited this classroom from being saved:</h4>

      <ul>
      <% @classroom.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.fields_for :drill_types do |ff| %>
    <div class="col-sm-10">
      <%= ff.label :name, class: "col-sm-2 control-label" %>
      <%= ff.text_field :name, class: "form-control" %>
      <%= ff.label :required_frequency, class: "col-sm-2 control-label" %>
      <%= ff.text_field :required_frequency, class: "form-control" %>
    </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :teacher_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:teacher_id, @teacher_options) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
