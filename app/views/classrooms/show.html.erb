<div class="page-header">
  <%= link_to classrooms_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_classroom_path(@classroom), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show classroom</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @classroom.name.nil? ? "" : @classroom.name %></dd>


  <dt>Drill types:</dt>
  <dd>
  <% if @classroom.drill_types.nil? %>
    <%= "no drill types" %>
  <% else %>
    <% @classroom.drill_types.each do |drill_type| %>
        <%= drill_type.name %> drill, held <%= drill_type.required_frequency %><br />
    <% end %>
  <% end %>
  </dd>


  <dt>Teacher:</dt>
  <dd><%= @classroom.teacher.nil? ? "" : @classroom.teacher.name %></dd>

</dl>
